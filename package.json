{
  "name": "cscart-development-helper",
  "displayName": "CSCart Development Helper",
  "description": "Unofficial extension for CS-Cart developers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
			"activitybar": [
				{
					"id": "addon-explorer",
					"title": "CS-Cart Addon Explorer",
					"icon": "media/addon.svg"
				}
			]
		},
    "commands": [
      {
        "command": "cscart-development-helper.helloWorld",
        "title": "Hello World"
      }
    ],
    "views": {
      "addon-explorer": [
				{
					"id": "addonExplorer",
					"name": "CS-Cart Addons",
					"icon": "media/addon.svg",
					"contextualTitle": "Addons"
				}
			]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
